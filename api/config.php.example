<?php
// Datoteka za konfiguraciju baze podataka

// Postavke za spajanje na bazu
$db_host = "localhost";      // Poslužitelj baze podataka (npr. localhost)
$db_user = "your_username";  // Korisničko ime za bazu
$db_pass = "your_password";  // Lozinka za bazu
$db_name = "your_database";  // Ime baze podataka

// Spajanje na bazu
$conn = new mysqli($db_host, $db_user, $db_pass, $db_name);

// Provjera konekcije
if ($conn->connect_error) {
    die("Greška pri spajanju na bazu: " . $conn->connect_error);
}

// Postavljanje UTF-8 kodiranja za konekciju
$conn->set_charset("utf8");
?>
